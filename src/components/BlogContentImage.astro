---
import type { ImageMetadata } from "astro"
import Picture from "./Picture.astro"

export interface Props {
	src: ImageMetadata
	alt?: string
}

const { src, alt = "" } = Astro.props as Props
---

<Picture
	src={src}
	alt={alt}
	class="mx-auto w-full max-w-full rounded-lg border border-astro-gray-500"
	widths={[360, 720, 1440]}
/>
